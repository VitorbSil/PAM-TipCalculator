<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculator.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Padding="40" Spacing="30">
        <Label
            Text="Projeto TipCalculator,realizado em sala, explorando como realizar funções como arredondar um valor para cima ou para baixo; Slider e como atribuir um método a ele; e construção da interface utilizando HorizontalStackLayout. "
            HorizontalOptions="Center"/>

        <Button
            x:Name = "AboutButton"
            Text = "Clique aqui para conhecer mais!"
            WidthRequest="250"
            Clicked = "AboutButton_Clicked" />
 
    </VerticalStackLayout>
</ContentPage>